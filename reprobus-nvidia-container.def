BootStrap: docker
From: nvcr.io/nvidia/nvhpc:23.9-devel-cuda_multi-ubuntu22.04

%files
    ./src /usr/local/REPROBUS/src

%post
    apt-get update -y && apt-get upgrade -y
    apt-get install -y unzip tar nano python3-pip python3 wget curl python3-venv

    python3 -m venv /usr/local/REPROBUS/venv
    /usr/local/REPROBUS/venv/bin/pip install numpy scipy matplotlib xarray pandas netCDF4 cartopy

    cd /usr/local/REPROBUS
    unzip ./src/data.zip -d ./src/
    rm ./src/data.zip
